<ul class="map-trade-list__maps">
  <li class="map-trade-list__maps-header">
    <div class="map-trade-list__maps-header-properties">
        {{t 'components.map_trade_list.properties'}}
    </div>

    <div class="map-trade-list__maps-header-mods">
      {{t 'components.map_trade_list.mods'}}
    </div>

    <div class="map-trade-list__maps-header-listing">
      {{t 'components.map_trade_list.listing'}}
    </div>
  </li>

  {{#each tradeMaps as |tradeMap|}}
    <li class="map-trade-list__maps-item map-trade-list__maps-item--{{tradeMap.rarity}}">
      <div class="map-trade-list__maps-item-properties">
        {{#if tradeMap.itemQuantity}}
          <div class="map-trade-list__maps-item-properties-quantity">
            {{t 'components.map_trade_list.item_quantity' itemQuantity=tradeMap.itemQuantity}}
          </div>
        {{/if}}

        {{#if tradeMap.itemRarity}}
          <div class="map-trade-list__maps-item-properties-rarity">
            {{t 'components.map_trade_list.item_rarity' itemRarity=tradeMap.itemRarity}}
          </div>
        {{/if}}

        {{#if tradeMap.monsterPackSize}}
          <div class="map-trade-list__maps-item-properties-monster-pack-size">
            {{t 'components.map_trade_list.monster_pack_size' monsterPackSize=tradeMap.monsterPackSize}}
          </div>
        {{/if}}

        {{#if tradeMap.corrupted}}
          <div class="map-trade-list__maps-item-properties-corrupted">
            {{t 'components.map_trade_list.corrupted'}}
          </div>
        {{/if}}
      </div>

      <ul class="map-trade-list__maps-item-mods">
        {{#unless tradeMap.identified}}
          <div class="map-trade-list__maps-item-properties-unidentified">
            {{t 'components.map_trade_list.unidentified'}}
          </div>
        {{else}}
          {{#each tradeMap.mods as |mod|}}
            <li class="map-trade-list__maps-item-mods-line">
              {{fa-icon 'caret-right' class='map-trade-list__maps-item-mods-line-caret'}} {{mod}}
            </li>
          {{/each}}
        {{/unless}}
      </ul>

      <div class="map-trade-list__maps-item-listing">
        <div class="map-trade-list__maps-item-listing-price">
          <span class="map-trade-list__maps-item-listing-price-amount">
            {{tradeMap.priceAmount}}
          </span>

          {{fa-icon 'times'}}
          {{tradeMap.priceCurrency}}
        </div>

        <div class="map-trade-list__maps-item-listing-time">
          {{tradeMap.indexedAt}}
        </div>

        <div class="map-trade-list__maps-item-listing-account">
          {{t 'components.map_trade_list.sold_by' account=tradeMap.account}}
        </div>
      </div>
    </li>
  {{/each}}
</ul>