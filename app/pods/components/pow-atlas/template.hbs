<div local-class="atlas">
  <div local-class="wrapper">
    {{#pow-panzoom-container
      local-class="panzoom-container"
      minZoom=0.5
      maxZoom=1
      zoomSpeed=0.075
      onPanzoom=(action this.panzoom)
      onPanzoomInitialize=(action this.panzoomInitialize)
    }}
      <div local-class="map-background"></div>

      {{#if this.maps}}
        {{pow-atlas/maps
          currentMap=@currentMap
          maps=this.maps
          onMapClick=(action this.navigateToMap)
        }}
      {{/if}}

      {{#if @currentMap}}
        {{pow-atlas/sextants
          map=@currentMap
        }}
      {{/if}}
    {{/pow-panzoom-container}}
  </div>
</div>
