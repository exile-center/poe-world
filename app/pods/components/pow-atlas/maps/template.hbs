{{#each maps as |map|}}
  <li
    local-class="item"
    style={{css-offset map.offsetLeft map.offsetTop}}
    {{action onMapClick map on='click'}}
  >
    <img
      local-class="item-map"
      src={{map.imageUrl}}
      alt={{map.name}}
      data-toggle="popover"
      data-title={{map.name}}
    >

    <div data-popover>
      <p class="my-1">
        {{t 'components.atlas.popover_tier' tier=map.tier}}
      </p>
      <p class="my-1">
        {{t 'components.atlas.popover_area_level' areaLevel=map.areaLevel}}
      </p>

      {{#if map.pantheon}}
        <p local-class="pantheon-color" class="my-1">
          {{t 'components.atlas.popover_pantheon' pantheon=map.pantheon}}
        </p>
      {{/if}}
    </div>

    {{#if (eq currentMap map)}}
      <div local-class="item-active"></div>
    {{/if}}

    {{#if map.pantheon}}
      <div local-class="item-pantheon"></div>
    {{/if}}
  </li>
{{/each}}

<div class="popover" role="tooltip">
  <div class="arrow"></div>
  <h3 class="popover-header"></h3>
  <div class="popover-body"></div>
</div>