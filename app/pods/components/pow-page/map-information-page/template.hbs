{{#if map.drops}}
  <h2>
    {{fa-icon "coins" class="mr-1"}}
    {{t "components.page.map_information_page.drops_title"}}
  </h2>

  <div class="list-group">
    {{#each map.drops as |drop|}}
      {{#if drop.wikiUrl}}
        {{#pow-external-link url=drop.wikiUrl class="list-group-item list-group-item-action"}}
          {{drop.name}}
        {{/pow-external-link}}
      {{else}}
        <div class="div list-group-item">
          {{drop.name}}
        </div>
      {{/if}}
    {{/each}}
  </div>
{{/if}}

{{#if map.layoutRating}}
  <h2 class="mt-3">
    {{fa-icon "compass" class="mr-1"}}
    {{t "components.page.map_information_page.layout_title"}}
  </h2>

  <div class="d-flex align-items-center">
    <div local-class="layout" class="bg-darker px-2 py-0 mr-3">
      {{map.layoutRating}}
    </div>

    <p class="mb-0">
      {{t layoutRatingDescriptionKey}}
    </p>
  </div>
{{/if}}

{{#if map.bossRating}}
  <h2 class="mt-3">
    {{fa-icon "skull" class="mr-1"}}
    {{t "components.page.map_information_page.boss_title"}}
  </h2>

  <p class="lead">
    {{map.bossRating}} / 5
  </p>
{{/if}}

{{#if map.pantheon}}
  <h2 class="mt-3">
    {{fa-icon "church" class="mr-1"}}
    {{t "components.page.map_information_page.pantheon"}}
  </h2>

  <p local-class="pantheon" class="lead font-weight-bold">
    {{map.pantheon}}
  </p>
{{/if}}
