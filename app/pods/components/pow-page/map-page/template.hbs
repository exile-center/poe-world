<div class="header bg-darker">
  <div class="p-3">
    <div class="d-flex justify-content-between align-items-center">
      <button class="btn btn-light d-block h-75" {{action back}}>
        {{fa-icon 'times'}}
      </button>

      <div class="d-flex align-items-center">
        <h1>{{map.name}}</h1>
        <img src={{map.imageUrl}} class="header-map-icon ml-2" alt="">
      </div>
    </div>

    <div class="row mt-2 mb-1">
      <div class="header-stat col text-center bg-dark py-2 mx-1">
        {{t 'components.page.map_page.tier'}}
        <span class="header-tier header-tier-{{map.tierColor}} px-2 py-0 ml-2">
          {{map.tier}}
        </span>
      </div>

      <div class="header-stat col text-center bg-dark py-2 mx-1">
        {{t 'components.page.map_page.area_level' level=map.areaLevel}}
      </div>
    </div>
  </div>

  <ul class="nav nav-tabs px-3">
    <li class="nav-item">
      {{#pow-link 'atlas.map.information' class='nav-link'}}
        {{fa-icon 'info' class='mr-1'}}
        {{t 'components.page.map_page.information'}}
      {{/pow-link}}
    </li>

    <li class="nav-item">
      {{#pow-link 'atlas.map.trade' class='nav-link'}}
        {{fa-icon 'balance-scale' class='mr-1'}}
        {{t 'components.page.map_page.trade'}}
      {{/pow-link}}
    </li>
  </ul>
</div>

<div class="container px-3 py-2">
  {{yield}}
</div>
