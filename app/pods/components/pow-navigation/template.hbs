{{#pow-link "home" local-class="custom-brand" class="navbar-brand d-flex align-items-center"}}
  <img src="assets/images/logo-small.png" class="mr-2" alt="">
  PoeWorld
{{/pow-link}}

<div class="collapse navbar-collapse">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      {{#pow-link 'atlas' class='nav-link'}}
        {{t 'components.navigation.atlas'}}
      {{/pow-link}}
    </li>

    <li class="nav-item ml-2">
      {{#pow-link 'stash.vendor-recipe' class='nav-link'}}
        {{t 'components.navigation.stash'}}
      {{/pow-link}}
    </li>

    <li class="nav-item ml-2">
      {{#pow-link 'trade' class='nav-link'}}
        {{t 'components.navigation.trade'}}
      {{/pow-link}}
    </li>
  </ul>

  <ul class="navbar-nav mr-2">
    <li class="nav-item ml-2">
      {{#pow-link 'settings' class='nav-link'}}
        {{t 'components.navigation.settings'}}
      {{/pow-link}}
    </li>
  </ul>
  <div class="navbar-text">
    <div local-class="badge-league" class="badge badge-secondary badge-league px-2 py-1">
      {{leagueName}}
    </div>

    {{#if isAuthenticated}}
      {{#pow-tooltip
        class="d-inline ml-2 text-success"
        placement="left"
        title=(t "components.navigation.authenticated")
      }}
        {{fa-icon "user-check"}}
      {{/pow-tooltip}}
    {{else}}
      {{#pow-tooltip
        class="d-inline ml-2 text-danger"
        placement="left"
        title=(t "components.navigation.not_authenticated")
      }}
        {{fa-icon "user-slash"}}
      {{/pow-tooltip}}
    {{/if}}
  </div>
</div>
