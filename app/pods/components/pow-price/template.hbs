{{! template-lint-disable no-bare-strings no-implicit-this }}

<div class="d-inline-flex align-items-center">
  {{#if amount}}
    <span class="mr-1">
      {{roundedAmount}}
    </span>

    {{fa-icon "times" }}

    {{#if currency}}
      <img src={{currency.imageUrl}} local-class="image" class="ml-1">
    {{else}}
      {{currencyId}}
    {{/if}}
  {{else}}
    <span class="text-warning">
      {{t "components.price.undefined"}}
    </span>
  {{/if}}
</div>
