<div class="d-inline-flex align-items-center">
  {{#unless loadCurrencyTask.isRunning}}
    <span local-class="amount" class="mr-1">
      {{amount}}
    </span>

    {{fa-icon 'times'}}

    {{#if currency}}
      <img src={{currency.imageUrl}} local-class="image">
    {{else}}
      {{currencyId}}
    {{/if}}
  {{/unless}}
</div>